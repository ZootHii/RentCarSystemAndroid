<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_margin="6dp"
    cardview:cardBackgroundColor="#FFFFFF"
    cardview:cardCornerRadius="7dp"
    cardview:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/car_card_image"
                android:layout_width="220dp"
                android:layout_height="170dp"

                android:scaleType="centerCrop"
                android:contentDescription="TODO" />

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/car_card_description"
                android:layout_width="220dp"
                android:layout_height="55dp"
                android:layout_gravity="start"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="Lamborghini Carbonado Apertos"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="19sp"
                android:textStyle="italic"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/car_card_brand_name"
                android:layout_width="178dp"
                android:layout_height="55dp"
                android:layout_gravity="end"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="Lamborghini"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp"

                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/car_card_color_name"
                android:layout_width="178dp"
                android:layout_height="55dp"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="Rose Gold"

                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/car_card_model_year"
                android:layout_width="178dp"
                android:layout_height="55dp"
                android:layout_gravity="end"
                android:layout_marginTop="3dp"

                android:fontFamily="@font/audiowide"


                android:gravity="center"
                android:text="2015"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/car_card_daily_price"
                android:layout_width="178dp"
                android:layout_height="55dp"
                android:layout_gravity="end"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="$10000 Daily"
                android:textAlignment="center"
                android:textColor="#019F23"
                android:textSize="19sp" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
